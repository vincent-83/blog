<p id="notice"><%= notice %></p>

<h1>Blog Posts</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= User.find(post.user_id).email if post.user_id %></td>
        <td><%= link_to 'Show', post, :class => 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
